<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="30dp"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    <!--아이디 입력란-->
    <EditText
            android:id="@+id/IDET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:hint="아이디"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="22sp"/>
    <View
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    <!--비밀번호 입력란-->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="30dp">
        <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="22sp"/>

        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:id="@+id/hidePwIV"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp"
                   android:src="@drawable/icon_hide" />

    </RelativeLayout>

    <View
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    <CheckBox
            android:id="@+id/keepLoginCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:text="로그인 유지"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    <Button
            style="?android:attr/borderlessButtonStyle"
            android:clickable="true"
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_login"
            android:text="BusLinker ID로 로그인"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    <com.kakao.usermgmt.LoginButton
            android:id="@+id/kakaoLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"></com.kakao.usermgmt.LoginButton>

    <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_login"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="20sp"/>

</LinearLayout>