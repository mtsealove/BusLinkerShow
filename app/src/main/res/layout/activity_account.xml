<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Account.AccountActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <inha.ac.kr.pdychoo.buslinker.Views.TitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="25sp"
                          android:textColor="@color/black"
                          android:text="회원정보 확인/수정"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:text="ID"
                          android:background="@drawable/background_input" android:id="@+id/IDTV"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:hint="이름"
                          android:background="@drawable/background_input" android:id="@+id/nameET"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:text="생년월일"
                          android:background="@drawable/background_input" android:id="@+id/birthTV"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:text="성별"
                          android:background="@drawable/background_input" android:id="@+id/genderTV"/>

                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:hint="새 비밀번호"
                          android:background="@drawable/background_input" android:id="@+id/newPasswordET"
                          android:inputType="textPassword"/>

                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:hint="새 비밀번호 확인"
                          android:background="@drawable/background_input" android:id="@+id/newPasswordConfirmET"
                          android:inputType="textPassword"/>

                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:textSize="20sp"
                          android:padding="5dp"
                          android:hint="기존 비밀번호"
                          android:background="@drawable/background_input" android:id="@+id/passwordET"
                          android:inputType="textPassword"/>

                <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/confirmBtn"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_btn"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <inha.ac.kr.pdychoo.buslinker.Views.SlideMenu
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>