<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Account.DealActivity">

        <inha.ac.kr.pdychoo.buslinker.Views.TitleView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"/>

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!--보내는 사람-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginVertical="5dp"
                          android:textColor="@color/black"
                          android:textSize="25sp"
                          android:text="출발" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:padding="10dp"
                              android:background="@drawable/border">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="터미널"
                              android:textColor="@color/black" android:id="@+id/startTmnTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="이름"
                              android:textColor="@color/black" android:id="@+id/startNmTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="연락처"
                              android:textColor="@color/black" android:id="@+id/startContactTV"/>
                </LinearLayout>

                <!--받는 사람-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginVertical="5dp"
                          android:textColor="@color/black"
                          android:textSize="25sp"
                          android:text="도착" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:padding="10dp"
                              android:background="@drawable/border">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="터미널"
                              android:textColor="@color/black" android:id="@+id/endTmnTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="이름"
                              android:textColor="@color/black" android:id="@+id/endNmTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="연락처"
                              android:textColor="@color/black" android:id="@+id/endContactTV"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="배송시간"
                              android:textColor="@color/black" android:id="@+id/divTimeTV"/>
                </LinearLayout>

                <!--화물정보-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginVertical="5dp"
                          android:textColor="@color/black"
                          android:textSize="25sp"
                          android:text="화물" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:padding="10dp"
                              android:background="@drawable/border">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="가로 세로 높이"
                              android:textColor="@color/black" android:id="@+id/dimensionTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="무게"
                              android:textColor="@color/black" android:id="@+id/weightTV"/>
                </LinearLayout>

                <!--결제정보-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginVertical="5dp"
                          android:textColor="@color/black"
                          android:textSize="25sp"
                          android:text="결제" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:padding="10dp"
                              android:background="@drawable/border">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="메세지"
                              android:textColor="@color/black" android:id="@+id/messageTV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="금액"
                              android:textColor="@color/black" android:id="@+id/priceTV"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="결제 방법"
                              android:textColor="@color/black" android:id="@+id/methodTV"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="결제 시간"
                              android:textColor="@color/black" android:id="@+id/paydateTV"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text="상태"
                              android:textColor="@color/black" android:id="@+id/statusTV"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <inha.ac.kr.pdychoo.buslinker.Views.SlideMenu
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>